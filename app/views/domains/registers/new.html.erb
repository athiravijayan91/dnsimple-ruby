      <fieldset>
        <div class="checkbox form-group">
          <p><strong>WHOIS Privacy protection</strong> <span class="text-subtle">Recommended</span>
          </p>
          <label for="privacy">
            <input type="checkbox" name="privacy" id="privacy" value="1"> Hide my contact information in WHOIS for an additional $2.00/year.
          </label>
        </div>
        <div class="checkbox form-group">
          <p><strong>Domain auto renewal</strong> <span class="text-subtle">Recommended</span>
          </p>
          <label class="checkbox" for="auto_renew">
            <input type="checkbox" name="auto_renew" id="auto_renew" value="1" checked="checked"> Automatically renew this domain each year
          </label>
        </div>
      </fieldset>
      <form>
        <!-- <input class="dname" id="domainNameInput" type="text" name="domain_name" placeholder="example.com" value="<%= @domain.domain_name %>"> -->

